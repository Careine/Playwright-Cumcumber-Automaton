{
    "default": {
        "paths": [
            "src/test/features/*.feature"
        ],
        "require": [
            "src/test/steps/*.js",
            "src/test/hooks/hooks.js"
        ],
        "formatOptions": {
            "snippetInterface": "async-await"
        },
        "format": [
            [
                "html",
                "cucumber-report.html"
            ],
            "summary",
            "progress-bar",
            "json:./cucumber-report.json"
        ], 
        "publishQuiet": false,
        "dryRun": false
    }
}